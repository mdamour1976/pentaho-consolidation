<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="${ivy.artifact.group}" module="${ivy.artifact.id}" revision="${project.revision}" />

  <configurations>
    <conf name="default" />
    <conf name="dev" />
    <conf name="test" visibility="private" />
    <conf name="source" />
  </configurations>

  <publications>
    <artifact name="${ivy.artifact.id}" type="${artifact.type}" conf="default" />
  </publications>

  <dependencies defaultconf="dev->default">
    <dependency org="${ivy.artifact.group}" name="kettle-core"      rev="${dependency.kettle.revision}" changing="true"/>
    <dependency org="${ivy.artifact.group}" name="kettle-engine"    rev="${dependency.kettle.revision}" changing="true"/>
    <dependency org="${ivy.artifact.group}" name="kettle-db"        rev="${dependency.kettle.revision}" changing="true"/>
    <dependency org="${ivy.artifact.group}" name="kettle-ui-swt"    rev="${dependency.kettle.revision}" changing="true"/>  
    <dependency org="commons-vfs"    name="commons-vfs"      rev="20091118-pentaho" transitive="false" />
    <dependency org="pentaho"        name="pentaho-xul-core" rev="${dependency.pentaho-xul.revision}" changing="true"/>
    <dependency org="pentaho"        name="pentaho-xul-swt"  rev="${dependency.pentaho-xul.revision}" changing="true"/>
    <dependency org="pentaho"        name="pentaho-metadata" rev="${dependency.pentaho-metadata.revision}" changing="true" transitive="false" />
    
    <dependency org="junit"          name="junit"            rev="4.7" conf="test->default"/>
            
    
  </dependencies>
</ivy-module>
